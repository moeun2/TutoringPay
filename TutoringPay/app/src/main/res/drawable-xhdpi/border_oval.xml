<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">
    <!-- 바탕색 -->
    <solid
        android:color="#DDFFFFFF"/>
    <!-- 테두리 색 -->
    <stroke
        android:width="1dp"
        android:color="@color/violet"
        android:dashGap="2dp"
        android:dashWidth="1dp"/>
    <padding
        android:left="7dp"
        android:top="7dp"
        android:right="7dp"
        android:bottom="7dp" />
    <corners android:radius="4dp" />

</shape>